{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources, the location must support Availability Zones if required."
        }
      },
      "firewallPolicyName": {
        "type": "string",
        "defaultValue":"policy01",
        "metadata": {
          "description": "Azure Firewall policy name"
        }
      }
    },
    "resources": [
      {
        "apiVersion": "2020-06-01",
        "type": "Microsoft.Network/firewallPolicies",
        "name": "[parameters('firewallPolicyName')]",
        "location": "[parameters('location')]",
        "properties": {
          "threatIntelMode": "Alert"
        },
        "resources": [
          {
            "apiVersion": "2020-06-01",
            "type": "ruleCollectionGroups",
            "name": "si-tools-dev",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[resourceId('Microsoft.Network/firewallPolicies',parameters('firewallPolicyName'))]"
            ],
            "properties": {
              "priority": 10000,
              "ruleCollections": [
                {
                  "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                  "action": {
                    "type": "Allow"
                  },
                  "rules": [
                    {
                      "ruleType": "NetworkRule",
                      "name": "Access from build servers to all services with the Azure network for deployment and configurations",
                      "ipProtocols": [
                        "TCP"
                      ],
                      "destinationPorts": [
                        "443",
                        "80",
                        "22",
                        "5986"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "*"
                      ]
                    }
                  ],
                  "name": "devops",
                  "priority": 10000
                },
                {
                  "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                  "action": {
                    "type": "Allow"
                  },
                  "rules": [
                    {
                      "ruleType": "NetworkRule",
                      "name": "Access from azure servers to Microsoft KMS ( licensing servers )",
                      "ipProtocols": [
                        "TCP"
                      ],
                      "destinationPorts": [
                        "443"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "23.102.135.245"
                      ]
                    }
                  ],
                  "name": "network",
                  "priority": 10100
                },
                {
                  "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                  "action": {
                    "type": "Allow"
                  },
                  "rules": [
                    {
                      "ruleType": "NetworkRule",
                      "name": "Access from azure servers to Microsoft KMS ( licensing servers )",
                      "ipProtocols": [
                        "TCP",
                        "UDP"
                      ],
                      "destinationPorts": [
                        "443",
                        "80",
                        "123"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "*"
                      ]
                    }
                  ],
                  "name": "network",
                  "priority": 10200
                }
              ]
            }
          },
          {
            "apiVersion": "2020-06-01",
            "type": "ruleCollectionGroups",
            "name": "si-hub-dev",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[resourceId('Microsoft.Network/firewallPolicies',parameters('firewallPolicyName'))]",
              "[resourceId('Microsoft.Network/firewallPolicies/ruleCollectionGroups', parameters('firewallPolicyName'),'si-tools-dev')]"
            ],
            "properties": {
              "priority": 11000,
              "ruleCollections": [
                {
                  "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                  "action": {
                    "type": "Allow"
                  },
                  "rules": [
                    {
                      "ruleType": "NetworkRule",
                      "name": "splunk deployment server ips",
                      "ipProtocols": [
                        "TCP",
                        "UDP"
                      ],
                      "destinationPorts": [
                        "8089"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "*"
                      ]
                    },
                    {
                      "ruleType": "NetworkRule",
                      "name": "splunk master index server ips",
                      "ipProtocols": [
                        "TCP"
                      ],
                      "destinationPorts": [
                        "8089"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "*"
                      ]
                    },
                    {
                      "ruleType": "NetworkRule",
                      "name": "splunk index server ips",
                      "ipProtocols": [
                        "TCP"
                      ],
                      "destinationPorts": [
                        "9997"
                      ],
                      "sourceAddresses": [
                        "10.46.0.0/16"
                      ],
                      "destinationAddresses": [
                        "*"
                      ]
                    }
                  ],
                  "name": "Network",
                  "priority": 11000
                }
              ]
            }
          }
        ]
      }
    ]
  }
  